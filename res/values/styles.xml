<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="app_base_theme" parent="@android:style/Theme.Holo.Light" />

    <style name="app_theme" parent="app_base_theme">     
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="action_bar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- leave display options disabled here to allow smooth font control -->
        <item name="android:displayOptions"></item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="spinner_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="spinner_dropdown_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>        
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_splitter</item>
        <item name="android:background">@color/bg_splitter</item>
        <item name="android:layout_marginTop">@dimen/margin_splitter</item>
        <item name="android:layout_marginBottom">@dimen/margin_window</item>
    </style>

    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:clickable">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:paddingTop">@dimen/margin_window</item>
        <item name="android:paddingBottom">@dimen/margin_window</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/dialog_title</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_title" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
