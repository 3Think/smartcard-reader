<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:background="@color/bg_window"
    tools:context=".AidRouteActivity" >

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/font_medium"
        android:text="@string/intro_app_select" />

    <Spinner
        android:id="@+id/aid"
        android:layout_below="@+id/intro"
        style="@style/spinner" />

    <View
        android:id="@+id/separator" 
        android:layout_below="@+id/aid"
        style="@style/separator" />

    <ListView
        android:id="@+id/msg_list"
        android:layout_below="@+id/separator"
	    style="@style/list"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/separator2" />

    <View
        android:id="@+id/separator2"
        style="@style/separator"
        android:visibility="invisible"
        android:layout_above="@+id/manualSelectButton" />

    <Button
        android:id="@+id/manualSelectButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        style="@style/button"
        android:text="@string/select"
        android:hapticFeedbackEnabled="true"
        android:visibility="invisible"
        android:background="@drawable/button_bg_states" />
</RelativeLayout>
